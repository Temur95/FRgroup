<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="245dp"
    android:layout_margin="7dp"
    android:id="@+id/cardView_Client">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="125dp"
            android:layout_margin="4dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:id="@+id/imgView_ClientCardView"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="Client name"
            android:textSize="25sp"
            android:id="@+id/title_ClientCardView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="client address"
            android:layout_margin="4dp"
            android:textSize="15sp"
            android:id="@+id/subtitle_ClientCardView"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/btn_show_ClientCardView"
            android:text="Посмотреть"/>


    </LinearLayout>



</android.support.v7.widget.CardView>